<header role="banner">
  <div class="header-container">
    <div class="logo">
      <a href={`${import.meta.env.BASE_URL}`} aria-label="Retour à l'accueil">
        <img src={`${import.meta.env.BASE_URL}images/logo.webp`} 
        alt="Logo de Travaux Sisters, une entreprise spécialisée dans les travaux"
        width="150" 
        height="50" />
      </a>
    </div>

    <button class="menu-toggle" aria-label="Ouvrir le menu de navigation" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <nav class="navigation" role="navigation" aria-label="Navigation principale">
      <ul role="list">
        <li><a href={`${import.meta.env.BASE_URL}services`} aria-label="Page des services proposés" title="Découvrez nos services">Nos Services</a></li>
        <li><a href={`${import.meta.env.BASE_URL}about`} aria-label="En savoir plus sur Travaux Sisters" title="En savoir plus sur Travaux Sisters">À propos</a></li>
        <li><a href={`${import.meta.env.BASE_URL}blog`} aria-label="Consulter notre blog" title="Lire notre blog">Blog</a></li>
        <li><a href={`${import.meta.env.BASE_URL}contact`} aria-label="Page de contact" title="Nous contacter">Contact</a></li>
      </ul>
    </nav>

    <div class="contact-button">
      <a href={`${import.meta.env.BASE_URL}contact`} aria-label="Contact">Nous contacter</a>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const menuToggle = document.querySelector('.menu-toggle');
      const navigation = document.querySelector('.navigation');

      menuToggle.addEventListener('click', () => {
        const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
        navigation.classList.toggle('open');
        menuToggle.setAttribute('aria-expanded', !isExpanded);
      });
    });
  </script>
</header>
