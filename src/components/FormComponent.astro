---
const { title, placeholderProject } = Astro.props;
---

<form class="project-form">
  <h1>{title}</h1>

  <label for="civility" class="required">Civilité :</label>
  <select id="civility" name="civility" required>
    <option value="Monsieur">Monsieur</option>
    <option value="Madame">Madame</option>
  </select>

  <label for="lastName" class="required">Nom :</label>
  <input type="text" id="lastName" name="lastName" required />

  <label for="firstName" class="required">Prénom :</label>
  <input type="text" id="firstName" name="firstName" required />

  <label for="email" class="required">Email :</label>
  <input type="email" id="email" name="email" required />

  <label for="context" class="required">Contexte :</label>
  <textarea id="context" name="context" placeholder="Décrivez le contexte de votre projet." required></textarea>

  <label for="project" class="required">Racontez votre projet :</label>
  <textarea id="project" name="project" placeholder={placeholderProject} required></textarea>

  <label for="phone">Numéro de téléphone (optionnel) :</label>
  <input type="tel" id="phone" name="phone" />

  <label for="area">Surface concernée par les travaux (optionnel) :</label>
  <input type="text" id="area" name="area" />

  <label for="deadline">Délai souhaité (optionnel) :</label>
  <input type="text" id="deadline" name="deadline" placeholder="Par exemple : je souhaite que les travaux soient terminés / commencés en mai prochain" />

  <label for="budget">Budget (optionnel) :</label>
  <input type="number" id="budget" name="budget" />

  <button type="submit">Envoyer</button>
</form>

