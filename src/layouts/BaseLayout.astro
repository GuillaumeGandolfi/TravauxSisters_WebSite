---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { needsWorksFormCSS } = Astro.props;
---
<html lang="fr">
  <head>
    <title>Travaux Sisters</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Travaux Sisters - Un accompagnement pour vos projets de rénovation avec des artisans de confiance, conçu pour répondre aux besoins des femmes." />

    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/global.css`} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/hero.css`} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/header.css`} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/footer.css`} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/promise.css`} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/project.css`} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/works.css`} />
    <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/testimonial.css`} />

    <!-- Import conditionnel pour `works-form.css` -->
    {needsWorksFormCSS && (
      <link rel="stylesheet" href={`${import.meta.env.BASE_URL}styles/works-form.css`} />
    )}
    
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet"></noscript>
  </head>
  <body>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>